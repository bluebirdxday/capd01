<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BusRouteGuideActivity">


    <TextView
        android:id="@+id/busStation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/busStop_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/busStop_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/busStop_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/rTime_btu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남은시간" />

    <Button
        android:id="@+id/busStopAlarm_btu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정류장알림"
        />

    <Button
        android:id="@+id/stop_btu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하차"
        />

</LinearLayout>