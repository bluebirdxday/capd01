<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/skyblue_200">

        <!-- 탑승 노선 번호 -->

        <!-- 음성 안내 -->
        <TextView
            android:id="@+id/Bording_BusNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/vitro"
            android:text="3-1"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold">

        </TextView>


        <!-- 음성 안내 버튼-->
        <Button
            android:id="@+id/btn_root_voice"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="#FFCA28"
            android:fontFamily="@font/samlip"
            android:text="음성 안내"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:cornerRadius="10dp">

        </Button>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/round_corner">
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="이번\n정류장"
            android:textAlignment="center"
            android:textSize="45dp"
            android:textColor="@color/white"
            android:background="@drawable/my_gradient_drawable"
            android:fontFamily="@font/samlip">
        </TextView>

        <!-- 이번 정류장-->
        <TextView
            android:layout_weight="1"
            android:id="@+id/root_thisBusStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:text="ex전주대학교"
            android:textSize="40dp"
            android:fontFamily="@font/samlip">
        </TextView>

    </LinearLayout>
    <ImageView
        android:src="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/round_corner"
        >

        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/my_gradient_drawable"
            android:fontFamily="@font/samlip"
            android:text="다음\n정류장"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="45dp"
            ></TextView>

        <!-- 다음 정류장-->
        <TextView
            android:layout_weight="1"
            android:id="@+id/root_nextBusStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:text="ex전주사대부고"
            android:textColor="@color/black"
            android:textSize="40dp"
            android:fontFamily="@font/samlip">
        </TextView>

    </LinearLayout>
    <ImageView
        android:src="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:background="@drawable/round_corner">

        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/my_gradient_drawable"
            android:textAlignment="center"
            android:text="다다음\n정류장"
            android:textColor="@color/white"
            android:textSize="45dp"
            android:fontFamily="@font/samlip"></TextView>

        <!-- 다다음 정류장-->
        <TextView
            android:layout_weight="1"
            android:id="@+id/root_NNextStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:text="ex호남제일고"
            android:textAlignment="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:fontFamily="@font/samlip">
        </TextView>
    </LinearLayout>

    <ImageView
        android:src="@drawable/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 정류장 알림 -->
        <Button
            android:id="@+id/btn_root_vioce_busstop"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FFC107"
            android:fontFamily="@font/samlip"
            android:text="정류장알림"
            android:textColor="@color/white"
            android:textSize="40dp"
            app:cornerRadius="10dp">

        </Button>

        <!-- 하차 -->
        <Button
            android:id="@+id/btn_root_destination"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/gray"
            android:fontFamily="@font/samlip"
            android:text="하차"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold"
            app:cornerRadius="10dp">

        </Button>
    </RelativeLayout>
</LinearLayout>